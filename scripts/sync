#!/usr/bin/env python3
"""Backward-compatible entry point for the legacy sync command."""

from __future__ import annotations

import os
import sys


def main() -> None:
    script_dir = os.path.dirname(os.path.realpath(__file__))
    pull_script = os.path.join(script_dir, "pull")

    if not os.path.exists(pull_script):
        print("[sync] missing companion pull script; please reinstall.", file=sys.stderr)
        sys.exit(1)

    cmd = [sys.executable, pull_script, *sys.argv[1:]]
    os.execv(sys.executable, cmd)


if __name__ == "__main__":
    main()
