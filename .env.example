## Minimal sample (.env.example) — copy to .env and fill values.

# TAPD (choose one auth method)
# - Personal token (preferred if supported)
# TAPD_TOKEN=
# - Or Basic Auth
# TAPD_API_USER=
# TAPD_API_PASSWORD=
TAPD_WORKSPACE_ID=

# Notion (required for writes)
NOTION_TOKEN=
NOTION_DATABASE_ID=

# Defaults for wrappers (pull/update)
DEFAULT_OWNER=江林

# Runtime
TZ=Asia/Shanghai
LOG_LEVEL=INFO

# TAPD filtering helpers (optional)
# TAPD_ONLY_OWNER=
# TAPD_ONLY_CREATOR=

# Endpoints override (rarely needed)
# TAPD_API_BASE=https://api.tapd.cn
# TAPD_STORIES_PATH=/stories
# TAPD_MODULES_PATH=/modules
# TAPD_ITERATIONS_PATH=/iterations
# TAPD_MODULE_FILTER_KEY=
# TAPD_FILTER_MODULE_ID_KEYS=module_id,category_id,moduleid
# TAPD_FILTER_MODULE_NAME_KEYS=module,category,module_name

# Notion module value strategy
# NOTION_MODULE_VALUE=name   # or 'path'
# MODULE_PATH_SEP=/

# Creation guard
CREATION_OWNER_SUBSTR=江林
CREATION_REQUIRE_CURRENT_ITERATION=1

# Notifications
# WECOM_WEBHOOK_URL=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=xxxx

# TestFlow / LLM
OLLAMA_HOST=http://127.0.0.1:11434
OLLAMA_MODEL=gpt-oss:20b
# OLLAMA_TIMEOUT=60
# OLLAMA_MAX_RETRIES=3
# OLLAMA_TEMPERATURE=0.1
TESTFLOW_TESTERS_PATH=config/testers.json
TESTFLOW_OUTPUT_DIR=data/testflow
# TESTFLOW_PROMPT_PATH=config/testflow_prompt.md
# TESTFLOW_MAIL_DRY_RUN=1

# SMTP for TestFlow notifications (optional, leave blank for dry-run)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=465
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_USE_TLS=1
# SMTP_USE_SSL=0
# MAIL_SENDER=testflow@example.com

# FE hours mapping
# TAPD_FE_HOURS_KEYS=custom_field_fe,front_end_hours,前端工时
# NOTION_FE_HOURS_PROP=前端工时
